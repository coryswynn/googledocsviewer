{
  "manifest_version": 3,
  "name": "Google Docs SplitView",
  "version": "1.03",
  "description": "Open documents side-by-side in a single Chrome tab.",
  "permissions": ["tabs", "activeTab"],
  "background": {
    "service_worker": "./js/background.js"
  },
  "action": {
    "default_popup": "./html/popup.html",
    "default_icon": {
      "16": "./images/icon16.png",
      "48": "./images/icon48.png",
      "128": "./images/icon128.png"
    }
  },
  "icons": {
    "16": "./images/icon16.png",
    "48": "./images/icon48.png",
    "128": "./images/icon128.png"
  }
}
